<h1> My tasks </h1>

<ul> <% @tasks.each do |task| %>
      <li>  <% if task.completed %>
              <i class="far fa-check-square"></i>
            <% else %>
              <i class="far fa-square"></i>
            <% end %>
              <%= link_to "#{task.title}", task_path(task.id)%>  <%= link_to destroy_task_path(task.id), method: :delete, data: { confirm: "Are you sure?" } do %>
              <i class="far fa-trash-alt"></i>
           <% end  %>
      </li>
    <% end  %>
</ul>

<div> <i class="fas fa-plus"></i> <%= link_to "Add a task", new_task_path %> </div>
